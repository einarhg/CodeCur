@model CodeCur.Models.RegisterViewModel
@{
    ViewBag.Title = "Sign up";
}

<div class="account-body">
    <div class="account-container">
        <img class="custom-image" src="~/Images/logo.svg" alt="Logo" />
        <div class="account-login-box">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2>Create a new account</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" });
                <div class="account-form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "" })
                    <div class="">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "", @placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="account-form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "" })
                    <div class="">
                        @Html.TextBoxFor(m => m.Email, new { @class = "", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="account-form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "" })
                    <div class="">
                        @Html.PasswordFor(m => m.Password, new { @class = "", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="account-form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                    <div class="">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "", @placeholder = "Confirm password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="account-form-group">
                    <div class="">
                        <input type="submit" class="account-button" value="Register" />
                    </div>
                </div>
                <p>
                    Go back to @Html.ActionLink("log in", "Login")
                </p>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
