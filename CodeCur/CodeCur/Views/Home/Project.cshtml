@model CodeCur.Models.ViewModels.ProjectDetailsViewModel
@{
    ViewBag.Title = "Project";
}

<div class="list-container">
    <div class="list-head">
        <h1 class="project-header"><span>Project </span>@Model.ProjectName</h1>
        @Html.ActionLink("<", "Index", "Home", new { @class = "back-file-button" })
        @Html.ActionLink("+", "CreateFile", "Home", new { id = Model.ProjectID }, new { @class = "new-file-button" })
        <a class="share-project-button" href="@Url.Action("ShareProject", "Home", new { id = Model.ProjectID })">
            <img src="~/Images/share.svg" />
        </a>
    </div>
    @if (!Model.Files.Any())
    {
        <p class="empty-list">No files currently in @Model.ProjectName!</p>
    }
    else
    {
        <div class="file-list-content">
            @foreach (var file in Model.Files)
            {
                <a class="file-box" href="@Url.Action("Index", "Editor", new { id = file.ID })">
                    @if (file.Type == "JavaScript")
                    {
                        <img src="~/Images/javascript.svg" />
                    }
                    else if (file.Type == "HTML")
                    {
                        <img src="~/Images/html.svg" />
                    }
                    else if (file.Type == "CSS")
                    {
                        <img src="~/Images/css.svg" />
                    }
                    else
                    {
                        <img src="~/Images/txt.svg" />
                    }
                    <p class="file-name">@file.Name</p>
                </a>
            }
        </div>
    }
</div>