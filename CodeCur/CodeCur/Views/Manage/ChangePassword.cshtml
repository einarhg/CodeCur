@model CodeCur.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div class="new-input-container">
    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2>Change Password</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="new-input-form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "" })
            <div>
                @Html.PasswordFor(m => m.OldPassword, new { @class = "", @placeholder = "Old password" })
            </div>
        </div>
        <div class="new-input-form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "" })
            <div>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "", @placeholder = "New password" })
            </div>
        </div>
        <div class="new-input-form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "", @placeholder = "Change password" })
            </div>
        </div>
        <div class="new-input-form-group">
            <div>
                @Html.ActionLink("Cancel", "Index", "Home", new { @class = "new-input-cancel-button" })
                <input type="submit" value="Change password" class="new-input-button" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}